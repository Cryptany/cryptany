<UserControl x:Class="DragAndDropSimple.Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
   >
    <Canvas x:Name="rootCanvas"
  Background="Gray"
  >
        <!-- You can drag this rectangle around the canvas. -->
        <Border
            Name="Rect"
            Width="Auto" Height="50" 
            Cursor="Hand" Background="White" 
            BorderBrush="Black" BorderThickness="1"
            HorizontalAlignment="Center" VerticalAlignment="Center" 
            UseLayoutRounding="True" CornerRadius="4">
            <StackPanel Orientation="Vertical">
                <TextBlock Name="BlockType"/>
                <TextBlock Name="BlockName"/>
            </StackPanel>
        </Border>
    </Canvas>

</UserControl>


