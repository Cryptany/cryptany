<UserControl x:Class="guiEditRouter.UserControlls.PropertiesElements.SingleValueParam"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">
    <Border Name="Block" BorderBrush="Black" BorderThickness="2" Width="300" Height="64" >
        <Grid x:Name="LayoutRoot" Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Name="ParamName"  Grid.Row="0" Grid.Column="0" Margin="2"/>
            <ComboBox Name="OperationType" Grid.Row="0" Grid.Column="1"  Margin="2"/>

            <TextBox Margin="2" Grid.ColumnSpan="2" Grid.Row="1" Name="Value"/>
            <ComboBox Margin="2" Grid.ColumnSpan="2" Grid.Row="1" Name="ValueList"/>
        </Grid>
    </Border>
</UserControl>
